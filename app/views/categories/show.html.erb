<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= @category.name %></h1>
    <p class="lead">
    <%= @category.description %>
    </p>

    <%= link_to "Edit", edit_category_path(@category), class:"btn btn-secondary" %>
    <%= link_to "Back", categories_path, class:"btn btn-dark" %>
    <%= button_to "Destroy", @category, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class:"btn btn-danger" %>
  </div>
</div>