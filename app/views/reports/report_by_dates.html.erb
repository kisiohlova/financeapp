<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h4>All spendings for the period: <%= params[:start_date] %> - <%= params[:end_date] %> </h4>

<div>
  <canvas id="myChart" width="600" height="400"></canvas></canvas>
</div>

<script>
  const ctx = document.getElementById('myChart').getContext('2d');
  const data = {
  labels: <%= raw @dates %>,
  datasets: [{
    label: 'Report by dates',
    data: <%= @amount %>,
    fill: false,
    borderColor: '#FFC300',
    tension: 0.1
  }]
};

const config = {
  type: 'line',
  data: data,
  options: {
    responsive: false
  }
};

const myChart = new Chart(ctx, config);
</script>
