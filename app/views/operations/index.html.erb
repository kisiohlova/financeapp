<h1>Operations</h1>
  <br/>
  <div class="dropdown">
    <%= form_tag operations_path, method: :get, class: "input-group mb-3", style:"max-width: 290px" do %>
    <%= select_tag 'category_id', options_for_select(@categories), include_blank: 'Choose Category', class: 'form-select mb-4', onchange: 'this.form.submit();' %>
    <div class="input-group-append">
      <%= submit_tag "Reset", class: "btn btn-secondary" %>
    </div>
    <% end %>
  </div>

  <div id="operations">
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Description</th>
        <th>Category</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Operation Type</th>
      </tr>
    </thead>
    <tbody>
      <% @operations.each do |operation| %>
        <tr>
          <td><%= link_to operation.description, operation %></td>
          <td><%= operation.category.name %></td>
          <td><%= operation.odate %></td>
          <td><%= operation.amount %></td>
          <td><%= operation.operation_type %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New operation", new_operation_path, class:"btn btn-secondary" %>
<br><br><br>
<%= paginate @operations %>
