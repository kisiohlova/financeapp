<h1>Operations</h1>

  <div id="operations">
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @operations.each do |operation| %>
        <tr>
          <td><%= link_to operation.description, operation %></td>
          <td><%= operation.odate %></td>
          <td><%= operation.amount %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New operation", new_operation_path, class:"btn btn-secondary" %>
<br><br><br>
<%= paginate @operations %>
